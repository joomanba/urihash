<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
>

    <beans profile="local">
        <bean class="iceberg.framework.core.webservice.client.WebServiceResolverBeanFactoryPostProcessor">
            <property name="scanningPath" value="iceberg.deployer.api" />
            <property name="serviceDataSourceHandlers">
                <bean class="iceberg.framework.core.webservice.client.PropertiesFileSupportServiceDataSourceHandler">
                    <property name="hostNameMap">
                        <map>
                            <entry key="approvalLineDetail" value="http://localhost:8081/deployer" />
                        </map>
                    </property>
                </bean>
            </property>
        </bean>
    </beans>

    <beans profile="dev">
        <bean class="iceberg.framework.core.webservice.client.WebServiceResolverBeanFactoryPostProcessor">
            <property name="scanningPath" value="iceberg.deployer.api" />
            <property name="serviceDataSourceHandlers">
                <bean class="iceberg.framework.core.webservice.client.PropertiesFileSupportServiceDataSourceHandler">
                    <property name="hostNameMap">
                        <map>
                            <!-- 운영에 보내야 하기 때문에 운영 IP를 적음 -개발로 변경 -->
                            <entry key="approvalLineDetail" value="http://10.52.222.38/deployer" />
                        </map>
                    </property>
                </bean>
            </property>
        </bean>
    </beans>

    <beans profile="prod">
        <bean class="iceberg.framework.core.webservice.client.WebServiceResolverBeanFactoryPostProcessor">
            <property name="scanningPath" value="iceberg.deployer.api" />
            <property name="serviceDataSourceHandlers">
                <bean class="iceberg.framework.core.webservice.client.PropertiesFileSupportServiceDataSourceHandler">
                    <property name="hostNameMap">
                        <map>
                            <!-- asis prod :: 10.52.164.240 -->
                            <entry key="approvalLineDetail" value="http://10.52.222.45/deployer" />
                        </map>
                    </property>
                </bean>
            </property>
        </bean>
    </beans>

</beans>
