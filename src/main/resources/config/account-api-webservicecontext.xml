<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
>

    <bean class="iceberg.framework.core.webservice.client.WebServiceResolverBeanFactoryPostProcessor">
        <property name="scanningPath" value="iceberg.account.api" />
    </bean>

    <beans profile="local">
        <bean class="iceberg.framework.core.webservice.client.PropertiesFileSupportServiceDataSourceHandler">
            <property name="hostNameMap">
                <map>
                    <entry key="accountInfo" value="http://localhost:8081/account-service" />
                    <entry key="groupInfo" value="http://localhost:8081/account-service" />
                    <entry key="roleInfo" value="http://localhost:8081/account-service" />
                </map>
            </property>
        </bean>
    </beans>
    <beans profile="dev">
        <bean class="iceberg.framework.core.webservice.client.PropertiesFileSupportServiceDataSourceHandler">
            <property name="hostNameMap">
                <map>
                    <entry key="accountInfo" value="http://10.52.222.38/account-service" />
                    <entry key="groupInfo" value="http://10.52.222.38/account-service" />
                    <entry key="roleInfo" value="http://10.52.222.38/account-service" />
                </map>
            </property>
        </bean>
    </beans>
    <beans profile="prod">
        <bean class="iceberg.framework.core.webservice.client.PropertiesFileSupportServiceDataSourceHandler">
            <property name="hostNameMap">
                <map>
                    <!-- asis prod :: 10.52.164.240 -->
                    <entry key="accountInfo" value="http://10.52.222.45/account-service" />
                    <entry key="groupInfo" value="http://10.52.222.45/account-service" />
                    <entry key="roleInfo" value="http://10.52.222.45/account-service" />
                </map>
            </property>
        </bean>
    </beans>
</beans>
